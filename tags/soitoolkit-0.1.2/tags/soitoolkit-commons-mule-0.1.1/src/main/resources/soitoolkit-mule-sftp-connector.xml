<?xml version="1.0" encoding="utf-8"?>

<mule 
	xmlns="http://www.mulesource.org/schema/mule/core/2.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:sftp="http://www.mulesource.org/schema/mule/sftp/2.2"
	xsi:schemaLocation="
		http://www.mulesource.org/schema/mule/core/2.2   http://www.mulesource.org/schema/mule/core/2.2/mule.xsd
		http://www.mulesource.org/schema/mule/sftp/2.2   http://www.mulesource.org/schema/mule/sftp/2.2/mule-sftp.xsd">

	<sftp:connector 
		name="sftp-connector" 
		identityFile="${SOITOOLKIT_SFTP_IDENTITYFILE}" 
		passphrase="${SOITOOLKIT_SFTP_IDENTITYFILE_PASSPHRASE}">
		<custom-exception-strategy class="org.soitoolkit.commons.mule.error.ExceptionHandler"/>
	</sftp:connector>

</mule>